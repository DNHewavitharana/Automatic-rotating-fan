<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >
    <corners
        android:radius="3dp"
        />
    <gradient
        android:angle="90"
        android:centerX="50%"
        android:centerColor="#2beff3f8"
        android:startColor="#c4f8f8f8"
        android:endColor="#bff8f9fa"
        android:type="linear"
        />
    <padding
        android:left="0dp"
        android:top="0dp"
        android:right="0dp"
        android:bottom="0dp"
        />
    <stroke
        android:width="2dp"
        android:color="#03dad0d0"
        />
</shape>